# üîí Configura√ß√£o do Snyk - BikeMizer
# Arquivo de configura√ß√£o para an√°lise de seguran√ßa

# Pol√≠ticas de seguran√ßa
policy: |
  # Ignorar vulnerabilidades espec√≠ficas (se necess√°rio)
  # Exemplo: ignore vulnerabilities espec√≠ficas por ID
  # - id: SNYK-JS-LODASH-567746
  #   reason: "Lodash vulnerability n√£o afeta nossa aplica√ß√£o"
  #   expires: "2024-12-31T23:59:59.000Z"

# Configura√ß√µes de teste
test:
  # Severidade m√≠nima para falhar o teste
  severity-threshold: "medium"
  
  # Arquivos para ignorar
  ignore:
    - "node_modules/**"
    - "dist/**"
    - "coverage/**"
    - "*.log"
  
  # Tipos de vulnerabilidades para incluir
  include:
    - "vulnerabilities"
    - "licenses"
    - "code"

# Configura√ß√µes de monitoramento
monitor:
  # Projeto no Snyk
  project-name: "bikemizer"
  
  # Tags para organiza√ß√£o
  tags:
    - "frontend"
    - "react"
    - "typescript"
    - "nodejs"
  
  # Configura√ß√µes de notifica√ß√£o
  notifications:
    - "email"
    - "slack"

# Configura√ß√µes de Docker
docker:
  # Base image para an√°lise
  base-image: "node:20-alpine"
  
  # Arquivos para incluir na an√°lise
  include:
    - "Dockerfile"
    - "package.json"
    - "package-lock.json"
  
  # Configura√ß√µes de scan
  scan:
    # Severidade m√≠nima
    severity-threshold: "medium"
    
    # Incluir vulnerabilidades de desenvolvimento
    dev-dependencies: true
    
    # An√°lise de c√≥digo
    code-analysis: true

# Configura√ß√µes de CI/CD
ci:
  # Falhar build se vulnerabilidades encontradas
  fail-on-issues: true
  
  # Severidade para falhar
  severity-threshold: "high"
  
  # Relat√≥rio em formato JSON
  json: true
  
  # Arquivo de sa√≠da
  output-file: "snyk-results.json"

# Configura√ß√µes de licen√ßas
licenses:
  # Verificar licen√ßas
  check: true
  
  # Licen√ßas permitidas
  allowed:
    - "MIT"
    - "Apache-2.0"
    - "BSD-3-Clause"
    - "ISC"
  
  # Licen√ßas proibidas
  forbidden:
    - "GPL-2.0"
    - "GPL-3.0"
    - "AGPL-3.0"
